<div class="navbar-logo">
  <!-- Logo -->

  <div class="logo-h1">
    <%= link_to root_path do %>
      <%= image_tag "https://res.cloudinary.com/harrisongarovi/image/upload/v1551157460/chef-hat-md.png", alt: "logo", height: 45, width: 35  %>
    <% end %>
    <%= link_to root_path do %>
    <h1 class="navbar-title">Home Chef</h1>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-right">
    <%= link_to "Chefs", chefs_path, class: "navbar-item navbar-link" %>
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo.blank? %>
            <%= image_tag "https://via.placeholder.com/50/", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: {toggle: "dropdown"} %>
          <% else %>
            <%= cl_image_tag(current_user.photo, width: 50, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data: {toggle: "dropdown"}) %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <% if current_user.chef_id.nil? %>
              <li><%= link_to "Kitchen", kitchen_foodie_path %></li>
              <li><%= link_to "Become a chef", new_chef_path %></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Chef's Kitchen", kitchen_chef_path %></li>
              <li><%= link_to "Foodie's Kitchen", kitchen_foodie_path %></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            <% end %>

          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "navbar-item navbar-link" %>
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-item navbar-link" %>
    <% end %>
  </div>
</div>
