<div class="sl-page-wrapper">
 <div class="sl-container">
  <div class="sl-form">

<h2 style="font-family: 'Montserrat', sans-serif;text-align: center;font-weight: bold;font-size: 35px;">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" style="font-family: 'Montserrat', sans-serif;">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" style="font-family: 'Montserrat', sans-serif;">
    <%= f.button :submit, "Log in", class: "btn btn-primary", style: "margin-bottom: 15px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
