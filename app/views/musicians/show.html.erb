<div class="container">
  <div class="show-container">
    <div class="profile-container text-left">
      <div><h1>About Me</h1></div>
      <!-- <div><p><%#= @musician.tag_line %></p></div> -->
      <div><p><%= @musician.description %></p></div>
      <div><h5>Location: <%= @musician.location %></h5></div>
    </div>

    <div class="card-wrapper">
      <div class="banner-content">
        <h3 class="musician-name"><%#= @musician.nickname %></h3>
        <div class="card-description">
          <div class="card-contents">
            <div><h4 class='text-center'><%= @musician.nickname.capitalize %></h4>
              <p class='want-to'>want to play with <%= @musician.nickname %>?</p>
              <input type="checkbox" style="display: none;" id="connect">
                <div class="popup" style="display: none;">
                  <div class="col-md-6">
                    <%= simple_form_for [@musician], url: musician_path(@musician) do |f|  %>
                    <%#= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
                    <%#= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker"} %>
                      <p class='submit'><%= f.button :submit, "Connect", class: "button" %></p>
                    <% end %>
              </div>
                </div>
                <div id="connect">
                  <p class="btn btn-primary connect">Connect</p>
                </div>
                <%#= link_to band_path(@band) do %>
                <p class="view text-right">View all the bands <%= @musician.nickname %> is in </p>
                <%# end %>
            </div>
            <script>
              $(document).ready(function() {
                $("#connect").change(function(){
                  if(this.checked){
                    $(".popup")[0].style.display = "block";
                    $(".card-contents")[0].style.display = "none";
                  } else {
                    $(".popup")[0].style.display = "none";
                  }
                })
              });
            </script>
          </div>
          <%= cl_image_tag(@musician.user_photo, class: 'card-user') %>
        </div>
      </div>
    </div>

  </div>
</div>
</body>


