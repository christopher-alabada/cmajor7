<div class="show-banner" style="box-shadow: 0px 0px 5px #000000; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path(@musician.banner_photo) %>');">
  <div class="card-category">
    <h3><%= @musician.nickname.capitalize %></h3>
      <h4><%= @musician.tag_line %></h4>
    <div class="banner-musician-description">
      <% @musician.equipments.each do |e| %>
        <p><%= e.equipment_type.capitalize %></p>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div class="show-container">
    <div class="profile-container text-left">
      <div><h1>About Me</h1></div>
      <!-- <div><p><%#= @musician.tag_line %></p></div> -->
      <div><p><%= @musician.description %></p></div>
      <div><h5>Location: <%= @musician.location %></h5></div>
    </div>

    <div class="card-wrapper">
      <div class="banner-content">
        <h3 class="musician-name"><%#= @musician.nickname %></h3>
        <div class="card-description">
          <div class="card-contents">
            <div>
              <%= cl_image_tag(@musician.user_photo, class: 'card-user') %>
              <h4 class='text-center'><%= @musician.nickname.capitalize %></h4>

              <% unless current_user == @musician %>
                <p class='want-to text-center'>want to play with <%= @musician.nickname %>?</p>
                  <div id="connect">
                    <% if @requested %>
                      <%= link_to "Already Connected", musicians_path, class: "btn btn-secondary disabled align-center", :disabled => true %>
                    <% else %>
                      <%= simple_form_for(@request) do |f| %>
                        <%= f.input :to_id, :as => :hidden, :input_html => { :value => @musician.id } %>
                        <%= f.input :band_id, collection: @musicians_bands, class: 'form-control', selected: 0 %>
                        <%= f.input :message, placeholder: 'Message' %>
                        <%= f.button :submit, 'Connect', class: "btn btn-primary connect align-center" %>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
                <%= link_to band_path(@musician) do %>
                <p class="view text-center">View all the bands <%= @musician.nickname %> is in </p>
                <% end %>
            </div>
            <script>
              $(document).ready(function() {
                $("#connect").change(function(){
                  if(this.checked){
                    $(".popup")[0].style.display = "block";
                    $(".card-contents")[0].style.display = "none";
                  } else {
                    $(".popup")[0].style.display = "none";
                  }
                })
              });
            </script>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>


