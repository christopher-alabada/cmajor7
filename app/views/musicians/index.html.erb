<div class="ts-bar-wrapper">
<div class="title-and-search-bar">
    <div style="border-bottom: 5px solid #E84369; width: 1110px; text-align: left; position: absolute; top: 80px; left: 100px;font-family: 'Montserrat', sans-serif;
  font-weight: 900;
  color: black; font-size: 26px;">
    Find by your preference
    </div>
<div class="flex-grow-3 d-flex musician-search-bar" style="display:flex; justify-content: left;">
      <%= form_tag musicians_path, method: :get, class: "text-left", style: 'padding-left: 50px' do %>
        <%= text_field_tag :query, params[:query], class: "form-home mr-sm-6 search-field", placeholder: "Music instrument or Location" %>
        <%= submit_tag "Search", class: "btn btn-danger", style: "margin: 43px;padding: 5px 25px 5px; margin-left: 10px;" %>
      <% end %>
</div>
</div>
</div>

<div class="card-container">
    <div style="border-bottom: 5px solid #3F5DFA; width: 400px; text-align: left; margin-bottom: 30px; margin-left: 20px; font-family: 'Montserrat', sans-serif;
  font-weight: 900;
  color: black;
  font-size: 27px;">
    Explore all musicians
    </div>
  <div class="musician-container">
    <div class="row">
      <% @musicians.each do |musician| %>
        <div class="col-xs-12 col-md-4">
          <div class="musician-index">
            <div class="musician-card">
              <%= link_to musician_path(musician) do %>
                <%= cl_image_tag(musician.user_photo, class: 'musician-image') %>

                <div class="musician-description-shadow">
                <div class="musician-card-description">
                <p class="nickname"><%= musician.nickname.capitalize! %></p>
                <div class="form-inline musician-equipment">
                  <%
                    instruments = musician.equipments.map do |e|
                      e.equipment_type.capitalize
                    end
                  %>
                  <%= instruments.join(" | ") %>
                </div>
                <p class="tag-line"><%= musician.tag_line %></p>
                <p class="location">Location :  <%= musician.location.capitalize! %></p>

              </div>
              </div>

              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
