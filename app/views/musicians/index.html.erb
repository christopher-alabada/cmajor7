<div class="wrapper">
  <div class="flex-grow-3 d-flex" style="display:flex; justify-content: left;">
      <%= form_tag musicians_path, method: :get, class: "text-left" do %>
        <%= text_field_tag :query, params[:query], class: "form-home mr-sm-6", placeholder: "Music instrument or Location" %>
        <%= submit_tag "Search", class: "btn btn-danger", style: "margin: 43px;padding: 5px 25px 5px; margin-left: 10px;" %>
      <% end %>
  </div>



  <h3>Explore all musicians</h3>
  <div class="musician-container">
    <div class="row">
      <% @musicians.each do |musician| %>
        <div class="col-xs-12 col-sm-3">
          <div class="musician-index">
            <div class="musician-card">
              <%= link_to musician_path(musician) do %>
                <%= musician.fullname %>
                <%= musician.location %>
                <%= cl_image_tag(musician.user_photo) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
