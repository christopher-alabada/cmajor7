<div class="show-banner" style="box-shadow: 0px 0px 5px #000000; background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.2)), url(https://res.cloudinary.com/harrisongarovi/image/upload/v1551851442/adult-artist-artists-210887.jpg);">
  <div class="card-category-band">
    <div class="container">
      <div style="margin-top: 95px;">
        <h3><%= @band.band_name %></h3>
          <h4>Unique band, unique sound</h4>
            <div class="banner-band-description">
              <p>Genre: Rock, Alternative</p>
            </div>
          </div>
      </div>
  </div>
</div>


<div class="container">
  <div class="show-container">

    <div class="card-wrapper">
      <div class="banner-content">
        <div class="card-description">
         <div class="band-contents-band">
            <div class="profile-container-band text-left">
              <div><h3><%= @band.band_name  %>'s info</h3></div>
              <div>
                <% @band.band_members.all.each do |member|%>
                  <p><%= member.user.nickname.capitalize %> plays
                  <% Equipment.find(member.user.equipment_ids).each do |instrument|%>
                    <%= instrument.equipment_type %>
                  <% end %></p>
                <% end %>
              </div>
              <div>
                <% @band.band_members.all.each do |member|%>
                  Location: <%= member.user.location.capitalize %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card-wrapper">
      <div class="banner-content">
        <div class="card-description">

          <div class="card-contents-band">
              <p class='band-members-title'>Members</p>
            <div class="band-members-wrapper">
              <% @band.band_members.all.each do |member|%>
                <%= link_to musician_path(member.user) do %>
                  <div class="band-members">
                    <span>
                      <%= cl_image_tag(member.user.user_photo, class:'member-avatar')%>
                    </span>
                    <p>
                      <%= member.user.nickname.capitalize %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            </div>
             <!--  <input type="checkbox" style="display: none;" id="connect">
                <div class="popup" style="display: none;">
                  <div class="col-md-6">
                      <p class='submit'></p>
                  </div>
                </div> -->
             <!--<a href="/bands/1">
                  <p class="view-members">View all members</p>
                </a> -->
          </div>

          <script>
            $(document).ready(function() {
              $("#connect").change(function(){
                if(this.checked){
                  $(".popup")[0].style.display = "block";
                  $(".card-contents")[0].style.display = "none";
                } else {
                  $(".popup")[0].style.display = "none";
                }
              })
            });
          </script>

        </div>
      </div>
    </div>
  </div>
</div>














